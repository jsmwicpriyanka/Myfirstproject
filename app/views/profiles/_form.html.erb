<%= form_for @profile do |f| %>

  
  <b><h1>Basic information</h1></b>
  <p>
    <%= f.label :Work %>
    <%= f.text_field :work %>
    
  </p>

  <p>
  <%= f.label :Birth_date %>
    <%= f.text_field :birth_date %>
    
  </p>

   <p>
   <%= f.label :Gender %><br>
   
      <%= f.label 'Male' %>
      <%= f.radio_button :gender, 'male' %>

      <%= f.label 'Female' %>
      <%= f.radio_button :gender, 'female' %>
     
    </p>
     

   <p>
   <%= f.label :Religious_view %>
  <%= f.select :religious_view, ["Hindu","muslim","sikh", "christian", "other"] %>
 
  </p>

<b><h>Details About you</h></b>
  <p>
    <%= f.label :About_you %>
    <%= f.text_area :about_you %>
    
  </p>

  <p>
  <%= f.label :Name_type %>
  <%= f.select :name_type, ["nick name","married name","maiden name", "full name", "other"] %>
  </p>
 
  <p>
  <%= f.label :Name %><br>
    <%= f.text_field :name %>
    <%= check_box_tag(:show_at_top_of_profile) %><%= f.label :show_at_top_of_profile %>
   
  </p>
  </p>
  
  <p>
  <%= f.label :Fav_quotes %>
    <%= f.text_area :fav_quotes %>
   

  </p>
  
  <p>
  <%= f.label :Relationship_status %>
  <%= f.select :relationship_status, ["in a relationship","married","unmarried", "engaged", "other"] %>
  
  </p>
  <p>
  <%= f.file_field :picture %>
  
  </p>
  <p>
  <%= f.submit  %>
  </p>
  

  <% end %>
